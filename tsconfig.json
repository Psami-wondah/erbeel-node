{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "sourceRoot": "/",
    "paths": {
      "@/*": ["./*"]
    },
    "inlineSources": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": false,
    "types": ["node"],
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"],
  "include": ["*"]
}
